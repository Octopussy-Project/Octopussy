[% USE LogManagement.Table(config) %]

[% table_config = LogManagement.Table.configuration(table_name) %]

<table class="table table-bordered table-condensed table-hover table-striped">
<thead>
<tr>
    <th>[% c.l("_NAME") %]</th>
    <th>[% c.l("_TYPE") %]</th>
</tr>
</thead>
<tbody>
[% FOREACH field IN table_config.fields %]
<tr><td>[% field.name %]</td><td>[% field.type %]</td></tr>
[% END %]
</tbody>
</table>